<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false">

	<class name="pe.joedayz.ejemplos.cinedayz.dominio.Actuacion" table="actuacion">
		<id name="codigoActuacion" column="actccodi">
			<generator class="increment" />
		</id>
		<many-to-one name="actor" column="actcodig" ></many-to-one>
		<many-to-one name="pelicula" column="pelcodig" ></many-to-one>
	</class>
</hibernate-mapping>

  